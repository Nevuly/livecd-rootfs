#!/bin/bash -ex
# vi: ts=4 noexpandtab

case $PASS in
    base.live)
        ;;
    *)
        exit 0
        ;;
esac


cat <<EOF > /etc/initramfs-tools/conf.d/casperize.conf
export CASPER_GENERATE_UUID=1
EOF

cat <<EOF > /etc/initramfs-tools/conf.d/default-layer.conf
LAYERFS_PATH=${PASS}.squashfs
EOF
